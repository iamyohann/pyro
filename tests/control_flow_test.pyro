
print("Testing Break in While Loop...")
mut i = 0
while i < 10:
    if i == 5:
        break
    i = i + 1

if i == 5:
    print("PASS: Break in While Loop")
else:
    print("FAIL: Break in While Loop")


print("Testing Continue in While Loop...")
i = 0
mut sum = 0
while i < 5:
    i = i + 1
    if i == 3:
        continue
    sum = sum + i

# i=1 -> sum=1
# i=2 -> sum=1+2=3
# i=3 -> continue
# i=4 -> sum=3+4=7
# i=5 -> sum=7+5=12
if sum == 12:
    print("PASS: Continue in While Loop")
else:
    print("FAIL: Continue in While Loop")


print("Testing Break in For Loop...")
let list = [1, 2, 3, 4, 5]
sum = 0
for x in list:
    if x == 4:
        break
    sum = sum + x

if sum == 6:
    print("PASS: Break in For Loop")
else:
    print("FAIL: Break in For Loop")


print("Testing Continue in For Loop...")
sum = 0
for x in list:
    if x == 3:
        continue
    sum = sum + x

if sum == 12:
    print("PASS: Continue in For Loop")
else:
    print("FAIL: Continue in For Loop")

print("Testing Nested Loops with Break...")
mut outer_count = 0
i = 0
while i < 3:
    mut j = 0
    while j < 3:
        if j == 1:
            break
        j = j + 1
    
    # j breaks at 1. so loop executes for j=0 only.
    outer_count = outer_count + 1
    i = i + 1

if outer_count == 3:
    print("PASS: Nested Loops with Break")
else:
    print("FAIL: Nested Loops with Break")

print("ALL TESTS PASSED")
